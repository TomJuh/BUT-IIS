{% extends 'base.html.twig' %}

{% block title %}Hello HomePageLoggedController!{% endblock %}

{% block body %}

    <div class="dash">
        <div class="dash-nav dash-nav-dark">
            <header>
                <a href="#!" class="menu-toggle">
                    <i class="fas fa-bars"></i>
                    <a href="index.html" class="logo"><i class="fas fa-charging-station"></i> <span>IoT</span></a>
                </a>



            </header>
            <nav class="dash-nav-list">
                <a href="/homepage/Logged" class="dash-nav-item">
                    <i class="fas fa-home"></i> Dashboard </a>

                <a href="/user/profile" class="dash-nav-item">
                    <i class="fa fa-user-circle"></i> User </a>


                <div class="dash-nav-dropdown">
                    <a href="#!" class="dash-nav-item dash-nav-dropdown-toggle">
                        <i class="fas fa-cube"></i> Systems </a>
                    <div class="dash-nav-dropdown-menu">

                        <a href="/system_registration" class="dash-nav-dropdown-item">Create system</a>
                    </div>
                </div>
                <div class="dash-nav-dropdown ">
                    <a href="#!" class="dash-nav-item dash-nav-dropdown-toggle">
                        <i class="fas fa-cog"></i> Devices </a>
                    <div class="dash-nav-dropdown-menu">
                        <a href="" class="dash-nav-dropdown-item">Cards</a>
                        <a href="" class="dash-nav-dropdown-item">Forms</a>
                        <div class="dash-nav-dropdown ">
                            <a href="#" class="dash-nav-dropdown-item dash-nav-dropdown-toggle">Icons</a>
                            <div class="dash-nav-dropdown-menu">
                                <a href="" class="dash-nav-dropdown-item">Solid Icons</a>
                                <a href="" class="dash-nav-dropdown-item">Regular Icons</a>
                                <a href="" class="dash-nav-dropdown-item">Brand Icons</a>
                            </div>
                        </div>
                        <a href="" class="dash-nav-dropdown-item">Stats</a>
                        <a href="" class="dash-nav-dropdown-item">Tables</a>
                        <a href="" class="dash-nav-dropdown-item">Typography</a>
                        <a href="" class="dash-nav-dropdown-item">User Interface</a>
                    </div>
                </div>
                <div class="dash-nav-dropdown">
                    <a href="#!" class="dash-nav-item dash-nav-dropdown-toggle">
                        <i class="fas fa-file"></i> Layouts </a>
                    <div class="dash-nav-dropdown-menu">

                        <a href="" class="dash-nav-dropdown-item">Log in</a>
                        <a href="" class="dash-nav-dropdown-item">Sign up</a>

                    </div>
                </div>
                <div class="dash-nav-dropdown">
                    <a href="#!" class="dash-nav-item dash-nav-dropdown-toggle">
                        <i class="fas fa-info"></i> About </a>
                    <div class="dash-nav-dropdown-menu">
                        <a href="https://github.com/TomJuh/BUT-IIS" target="_blank" class="dash-nav-dropdown-item">GitHub</a>

                    </div>
                </div>
            </nav>
        </div>
        <div class="dash-app">
            <header class="dash-toolbar">
                <a href="#!" class="menu-toggle">
                    <i class="fas fa-bars"></i>
                </a>
                <a href="#!" class="searchbox-toggle">
                    <i class="fas fa-search"></i>
                </a>
                <form class="searchbox" action="#!">
                    <a href="#!" class="searchbox-toggle"> <i class="fas fa-arrow-left"></i> </a>
                    <button type="submit" class="searchbox-submit"> <i class="fas fa-search"></i> </button>
                    <input type="text" class="searchbox-input" placeholder="type to search">
                </form>
                <div class="tools">


                    <button onclick="location.href='/logout';" type="button" class="btn custom-sign-out-btn me-2">Sign Out</button>
                </div>
            </header>



            <!--------------------------------- Page Content ------------------>
            <main class="dash-content">
                <div class="container-fluid">
                    <div class="row dash-row">

                        <!--------------------------------- Systems ------------------>
                        <div class="container">

                        <!--------------------------------------------------->

                        <div class="row">
                            {% for pair in systemKpiPairs %}
                                <div class="col-md-4 mb-4">
                                    <div class="card card-margin">
                                        <div class="card-header no-border">
                                            <h5 class="card-title">System: {{ pair.system.name }}</h5>
                                        </div>
                                        <div class="card-body pt-0">
                                            <div class="widget-49">
                                                <div class="widget-49-title-wrapper">
                                                    <div class="widget-49-date-primary">
                                                        <span class="widget-49-date-day"></span>
                                                        <span class="widget-49-date-day"></span>

                                                    </div>
                                                    <div class="widget-49-meeting-info">
                                                        <span class="widget-49-pro-title">System: {{ pair.system.name }}</span>
                                                        <span class="widget-49-meeting-time">System: {{ pair.system.name }}</span>
                                                    </div>
                                                </div>
                                                <div class="widget-49-Det">
                                                    <a class="btn btn-sm btn-flash-border-primary">Devices:</a>
                                                </div>
                                                <ol class="widget-49-points">
                                                    <li class="widget-49-item"><span></span></li>
                                                    <li class="widget-49-item"><span></span></li>
                                                    <li class="widget-49-item"><span></span></li>
                                                </ol>
                                                <ol class="widget-49-points">
                                               {% if pair.kpi == 'true' %}
                                                  <i class="fas fa-check-circle">KPI STATUS</i> <!-- Font Awesome check circle icon -->
                                              {% elseif pair.kpi == 'false' %}
                                                    <i class="fas fa-times-circle">KPI STATUS</i> <!-- Font Awesome times circle icon -->
                                              {% else %}
                                                    <i class="fas fa-question-circle">KPI STATUS</i> <!-- Font Awesome question circle icon -->
                                                  {% endif %}
                                                <form action="{{ path('delete_system', {'id': pair.system.id}) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this system?')">
                                                    <input type="hidden" name="_method" value="DELETE">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ pair.system.id) }}">
                                                    <button type="submit" class="btn custom-sign-out-btn me-2">Delete</button> <!-- Delete button -->
                                                </form>
                                                    <div class="widget-49-Details">
                                                <a href="{{ path('app_system_details', {'id': pair.system.id}) }}" class="btn btn-sm btn-flash-border-primary">View Details</a>
                                                    </div>

                                                </ol>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>



                    <div class="row">

                        <div class="col-xl-6">
                            <div class="card card-notifications">
                                <div class="card-header1">
                                    <div class="spur-card-icon">
                                        <i class="fas fa-bell"></i>
                                    </div>
                                    <div class="spur-card-title"> Notifications </div>
                                </div>
                                <div class="card-body ">
                                    <div class="notifications">
                                        <a href="#!" class="notification">
                                            <div class="notification-icon">
                                                <i class="fas fa-inbox"></i>
                                            </div>
                                            <div class="notification-text">New comment</div>
                                            <span class="notification-time">21 days ago</span>
                                        </a>
                                        <a href="#!" class="notification">
                                            <div class="notification-icon">
                                                <i class="fas fa-inbox"></i>
                                            </div>
                                            <div class="notification-text">New comment</div>
                                            <span class="notification-time">21 days ago</span>
                                        </a>
                                        <a href="#!" class="notification">
                                            <div class="notification-icon">
                                                <i class="fas fa-inbox"></i>
                                            </div>
                                            <div class="notification-text">New comment</div>
                                            <span class="notification-time">21 days ago</span>
                                        </a>
                                        <div class="notifications-show-all">
                                            <a href="#!">Show all</a>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        </div>


            </main>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="/js/spur.js"></script>


{% endblock %}