{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .user-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); /* Adjust the column width as needed */
        gap: 20px; /* Gap between user cards */
    }

    .user-card {
        border: 1px solid #ccc;
        padding: 10px;
        /* Additional styles for the user card */
    }
</style>

    <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">

            <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                <li><a href="/homepage/Logged" class="nav-link px-2 text-secondary">Home</a></li>
                <li><a href="/user/profile" class="nav-link px-2 text-secondary">UserProfile</a></li>
                <li><a href="/brooker" class="nav-link px-2 text-secondary">Brooker</a></li>
            </ul>


            <div class="text-end">
                <button onclick="location.href = '/logout';" type="button" class="btn btn-outline-light me-2">Sign Out</button>
            </div>
        </div>
    </div>
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>




<h1>Systems</h1>

    <div class="row">
        {% for pair in systemKpiPairs %}
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h3>System: {{ pair.system.name }}</h3>
                        <h4>Num of devices: {{ pair.numOfDev}}</h4>
                        <ul>

                            {% if pair.kpi == 'true' %}
                                <i class="fas fa-check-circle">KPI STATUS</i> <!-- Font Awesome check circle icon -->
                            {% elseif pair.kpi == 'false' %}
                                <i class="fas fa-times-circle">KPI STATUS</i> <!-- Font Awesome times circle icon -->
                            {% else %}
                                <i class="fas fa-question-circle">KPI STATUS</i> <!-- Font Awesome question circle icon -->
                            {% endif %}
                            <li><a href="{{ path('app_system_details', {'id': pair.system.id}) }}">View Details</a></li>
                            <form action="{{ path('delete_system', {'id': pair.system.id}) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this system?')">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ pair.system.id) }}">
                                <button type="submit">Delete</button> <!-- Delete button -->
                            </form>
                        </ul>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <li><a href="/system_registration" class="nav-link px-2 text-white">Create system</a></li>
{% endblock %}
