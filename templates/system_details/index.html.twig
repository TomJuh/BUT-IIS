{% extends 'base.html.twig' %}

{% block title %}Hello HomePageLoggedController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        .user-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); /* Adjust the column width as needed */
            gap: 20px; /* Gap between user cards */
        }

        .user-card {
            border: 1px solid #ccc;
            padding: 10px;
            /* Additional styles for the user card */
        }
    </style>

    <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
            <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
            </a>

            <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                <li><a href="/homepage/Logged" class="nav-link px-2 text-secondary">Home</a></li>
            </ul>

            <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search">
                <input type="search" class="form-control form-control-dark text-bg-dark" placeholder="Search..." aria-label="Search">
            </form>

            <div class="text-end">
                <button onclick="location.href = '/logout';" type="button" class="btn btn-outline-light me-2">Sign Out</button>
            </div>
        </div>
    </div>
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>




    <h1>All Devices Details</h1>

    <div class="row">
        {% for deviceDetail in deviceDetails %}
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Device ID: {{ deviceDetail.device.id }}</h5>
                        <p class="card-text">User Alias: {{ deviceDetail.userAlias }}</p>
                        <p class="card-text">Type Name: {{ deviceDetail.typeName }}</p>
                        <h6 class="card-subtitle mb-2 text-muted">Parameters</h6>
                        <ul class="list-group list-group-flush">
                            {% for parameter in deviceDetail.parameters %}
                                <li>{{ parameter.name }}</li>
                                {% set jsonValues = parameter.values %}
                                <ul>
                                    {% for value in jsonValues %}
                                        <li>{{ value }}</li>
                                    {% endfor %}
                                </ul>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        {% endfor %}

        <li><a href="{{ path('app_assign_devices', {'id': systemId}) }}">Assign Device</a></li>
        <li><a href="{{ path('app_assign_users_to_system', {'id': systemId}) }}">Assign to users</a></li>
    </div>
{% endblock %}
